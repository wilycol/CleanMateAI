{
  "name": "cleanmate-ai",
  "version": "1.0.0",
  "description": "CleanMate AI - Windows Optimizer with AI Intelligence",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:5173 && electron . --dev\"",
    "electron:preview": "electron .",
    "electron:build": "vite build && electron-builder"
  },
  "keywords": [
    "cleaner",
    "windows",
    "electron",
    "react",
    "ai"
  ],
  "author": "CleanMate Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "electron-log": "^5.0.0",
    "fs-extra": "^11.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "systeminformation": "^5.21.0",
    "rimraf": "^5.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0",
    "vite": "^4.4.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.cleanmate.ai",
    "productName": "CleanMate AI",
    "win": {
      "target": "nsis",
      "icon": "web/assets/logo.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "directories": {
      "output": "build_output_clean"
    },
    "files": [
      "build_output_clean/**/*",
      "electron/**/*",
      "services/**/*",
      "web/assets/**/*",
      "package.json"
    ]
  }
}
